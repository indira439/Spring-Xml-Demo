<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="actor1" class="com.stackroute.domain.Actor">
        <constructor-arg index="0" value="23"></constructor-arg>
        <constructor-arg index="1" value="indu"></constructor-arg>
        <constructor-arg index="2" value="female"></constructor-arg>
    </bean>

    <bean id="actor2" class="com.stackroute.domain.Actor">
        <constructor-arg index="0" value="30"></constructor-arg>
        <constructor-arg index="1" value="shiva"></constructor-arg>
        <constructor-arg index="2" value="male"></constructor-arg>
    </bean>

    <bean id="actor3" class="com.stackroute.domain.Actor">
        <constructor-arg index="0" value="21"></constructor-arg>
        <constructor-arg index="1" value="preethi"></constructor-arg>
        <constructor-arg index="2" value="female"></constructor-arg>
    </bean>

    <bean id="movie1" class="com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg index="0" ref="actor1"></constructor-arg>
    </bean>

    <bean id="movie2" class="com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg index="0" ref="actor2"></constructor-arg>
    </bean>

    <bean id="movie3" class="com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg index="0" ref="actor3"></constructor-arg>
    </bean>

    <bean name="movieA, movieB" class="com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg index="0" ref="actor1"></constructor-arg>
    </bean>
</beans>